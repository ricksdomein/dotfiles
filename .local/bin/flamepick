#!/bin/sh

# This is bound to Shift+PrintScreen by default, requires maim. It lets you
# choose the kind of screenshot to take, including copying the image or even
# highlighting an area to copy. scrotcucks on suicidewatch right now.

case "$(printf "Select area\\nFull screen\\nFull screen (clipboard)" | dmenu -i -p "Screenshot:")" in
	"Select area") flameshot gui ;;
	"Full screen") sleep 0.5s && flameshot full -p "${XDG_PICTURES_DIR}" ;;
	"Full screen (clipboard)") flameshot full -c ;;
esac
